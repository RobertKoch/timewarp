%section#timewarp.grid.grid_5col_4n
  .timewarp_form
    = simple_form_for @site do |f|
      = f.input_field :url, :placeholder => 'http://www.timewarp.com'
      = f.submit 'Warp!'
    %p= error_helper @site

  .debug.hidden
    %ul
      - @sites.each do |site|
        %li
          = link_to site.url, sites_analyse_path(site.token)
          = ' | '
          = link_to 'löschen', site_path(site.token), :method => :delete, :confirm => 'Wirklich löschen?'

