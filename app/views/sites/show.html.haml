%section#archive_detail
  // todo: show site title instead of url
  %h1 
    = @site.url

  // todo: make a "real" condition
  - has_img = false

  - if has_img
    - archive_img = ''
  - else 
    - archive_img = 'dummy-website.png'

  #site_images
    %a{:href => image_path(archive_img), :class => 'fancybox'}
      = image_tag(archive_img, :class => 'first')

  #site_meta
    %ul.meta
      %li.site_date
        %span.icon
        = to_german_date(@site.created_at)
      %li.site_likes
        %a{:href => '/'}
          %span.icon
          = @site.likes
          likes
      %li.site_views
        %a{:href => '/'}
          %span.icon
          = @site.visits
          views
      %li.site_share
        %a{:href => '/'}
          %span.icon
          Share

