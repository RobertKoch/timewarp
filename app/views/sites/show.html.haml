%section#archive_detail

  %h1 
    - if @site.title
      = @site.title
    - else 
      = @site.url

  // todo: make a "real" condition
  - has_img = false

  - if has_img
    - archive_img = ''
  - else 
    - archive_img = 'dummy-website.png'

  #site_images
    %a{:href => image_path(archive_img), :class => 'fancybox'}
      = image_tag(archive_img, :class => 'first')

  #site_meta
    %ul.meta
      %li.site_date
        %span.icon
        = to_german_date(@site.created_at)
      %li.site_views
        %span.icon
        = @site.visits
        views
      %li.site_likes
        %a{:href => '/'}
          %span.icon
          = @site.likes
          likes
      %li.site_share
        %a{:href => '/'}
          %span.icon
          Share

    %h5
      Tags
    %ul.tags
      // todo: use "tags_with_weight" from mongoid_taggable to show the numbers
      - @site.tags_array.each do |tag|
        %li 
          %a{:href => '/'} 
            = tag
            %span 1

